{
  "name": "seatkit",
  "version": "0.1.0",
  "private": true,
  "description": "Open-source restaurant reservation management system",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "turbo run typecheck",
    "typecheck:watch": "turbo run typecheck:watch"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.15.0",
    "@seatkit/eslint-config": "workspace:*",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
