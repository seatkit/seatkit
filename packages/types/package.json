{
	"name": "@seatkit/types",
	"version": "0.1.0",
	"description": "Core type definitions and Zod schemas for SeatKit",
	"license": "Apache-2.0",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./schemas": {
			"types": "./dist/schemas/index.d.ts",
			"import": "./dist/schemas/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit",
		"typecheck:watch": "tsc --noEmit --watch",
		"lint": "eslint . --max-warnings 0",
		"lint:fix": "eslint . --fix",
		"lint:prod": "NODE_ENV=production eslint . --max-warnings 0",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@seatkit/eslint-config": "workspace:*",
		"@types/node": "^22.8.6",
		"@vitest/coverage-v8": "^4.0.3",
		"eslint": "^9.15.0",
		"typescript": "^5.6.3",
		"vitest": "^4.0.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
