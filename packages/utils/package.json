{
	"name": "@seatkit/utils",
	"version": "0.1.0",
	"description": "Shared utility functions for SeatKit",
	"license": "Apache-2.0",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./date": {
			"types": "./dist/date.d.ts",
			"import": "./dist/date.js"
		},
		"./format": {
			"types": "./dist/format.d.ts",
			"import": "./dist/format.js"
		},
		"./database": {
			"types": "./dist/database.d.ts",
			"import": "./dist/database.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"clean": "rm -rf dist",
		"typecheck": "tsc --noEmit",
		"typecheck:watch": "tsc --noEmit --watch",
		"lint": "eslint . --max-warnings 0",
		"lint:fix": "eslint . --fix",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@seatkit/types": "workspace:*",
		"drizzle-orm": "^0.36.4",
		"postgres": "^3.4.5"
	},
	"devDependencies": {
		"@seatkit/eslint-config": "workspace:*"
	},
	"publishConfig": {
		"access": "public"
	}
}
